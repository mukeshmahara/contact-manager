<div class="card my-3">
    <div class="card-header">
      <h2>New Contact ...</h2>
    </div>
    <%= form_for [ @contact], data: { controller: 'form' } do |f| %>
        <div class="row d-flex content-center mt-3 mx-3">
            <fieldset class="rounded p-3 mb-3 ">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <%= f.label :first_name, class: 'required' %>
                            <%= f.text_field :first_name, class: 'form-control', required: true %>
                        </div>
                        <div class="form-group">
                            <%= f.label :last_name, class: 'required' %>
                            <%= f.text_field :last_name, class: 'form-control', required: true %>
                        </div>

                        <div class="form-group">
                            <%= f.label :email, class: 'required' %>
                            <%= f.text_field :email, class: 'form-control', required: true %>
                        </div>
                    </div>
                    <div class="col-md-6">

                        <div class="form-group">
                            <%= f.label :phone_number, class: 'required' %>
                            <%= f.text_field :phone_number, class: 'form-control', required: true %>
                        </div>
                        
                        <div class="form-group">
                            <%= f.label :address %>
                            <%= f.text_field :address, class: 'form-control' %>
                        </div>
                        <div class="form-group">
                            <%= f.label :notes %>
                            <%= f.text_field :notes, class: 'form-control' %>
                        </div>
                    </div>
                </div>
            </fieldset>
            
        </div>
        <div class="card-footer form-sticky-bottom text-end">
            <%= link_to 'Back to Contacts', contacts_path, class: 'btn btn-secondary' %>
            <%= f.submit 'Save', class: 'btn btn-primary', data: { disable_with: 'Please wait...' } %>
        </div>
    <% end %>
</div>
