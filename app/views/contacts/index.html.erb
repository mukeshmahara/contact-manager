<div class="row mt-3">
    <div class="col-12 ">
        <div class="d-flex justify-content-between gap-2 my-2"> 
            <%= link_to 'Add new contact', new_contact_path, class: 'btn btn-primary' %>
            <% if @total_records.present? %>
                <span class="badge bg-info d-flex align-items-center">Total Result Found: <%= @total_records %></span>
            <% end %>
            <%= form_tag(contacts_path, method: :get) do %>
                <div class="input-group w-100">
                    <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search #{controller_name.titleize}..." %>
                    <%= submit_tag 'Search', class: 'btn btn-secondary' %>
                </div>
            <% end %>
        </div>
        
        <div class="table-responsive">
            <table class="table table-condensed table-bordered table-striped table-hover">
                <thead class="bg-gray-100">
                    <%= render 'contacts/header' %>
                </thead>
                <tbody>
                    <%= render partial: 'contacts/contact', collection: @contacts %>
                </tbody>
            </table>
        </div>
        
        <%= will_paginate(@contacts)%>
    </div>
</div>

